{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "(?:create|design|build|generate).{0,30}(?:lead.?magnet|pdf|visual|slide|ebook|landing.?page)|html.{0,20}(?:asset|lead)",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'DESIGN TASK DETECTED: Before generating any visual assets, you MUST: (1) Read docs/brand-guide.md for colours, fonts, and style guidelines (2) Use the frontend-design skill/plugin for generating the design'"
          }
        ]
      },
      {
        "matcher": "/publish|npm.run.publish|ready.to.publish|commit.*push|all.done|tasks?.complete|ready.to.ship",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'CONTENT WORK COMPLETE: Remember to update docs/operations/backlog.md with completed tasks and any new items discovered.'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$CLAUDE_TOOL_INPUT\" | grep -qE '\\.html\"'; then echo 'HTML FILE DETECTED: Ensure you have reviewed docs/brand-guide.md and are using the frontend-design plugin for this design.'; fi"
          }
        ]
      }
    ]
  },
